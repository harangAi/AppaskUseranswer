<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/setting_dialog_borderline"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/setting_request_dialog"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical">


            <!-- 제목   -->
            <TextView
                android:id="@+id/setting_request_dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:text="원하시는 질문을 보내주세요"
                android:textAlignment="textStart"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <!-- 의뢰질문 내용   -->
            <EditText
                android:id="@+id/setting_request_dialog_contents"
                android:gravity="top"
                android:background="@drawable/setting_request_edittext_borderline"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:hint="Text field in focused state"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >


        <!-- 취소 버튼  -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/setting_request_dialog_cancel_btn"
            android:padding="5dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/setting_request_cancel_btn"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:textAlignment="center"
            android:text="취소"
            android:textColor="#44558F"
            android:textSize="16dp"
            android:textStyle="bold"
            android:focusable="true"
            android:layout_margin="25dp"
            />

            <!-- 전송 버튼  -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/setting_request_dialog_submit_btn"
                android:padding="5dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_request_submit_btn"
                android:gravity="center"
                android:paddingVertical="16dp"
                android:textAlignment="center"
                android:text="전송"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold"
                android:focusable="true"
                android:layout_margin="25dp"
                />



        </LinearLayout>


    </LinearLayout>


</LinearLayout>