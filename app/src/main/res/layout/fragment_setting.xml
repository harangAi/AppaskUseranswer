<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#44558f"
    android:orientation="vertical"
    >

        <!--  상단 여백      -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp">
        </LinearLayout>

        <!-- 어문유답   -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/test_title">
        </ImageView>

        <!--  공지사항, 알림, 새로운 질문, 앱 평가  -->
        <LinearLayout
            android:id="@+id/setting_container"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="470dp"
            android:orientation="vertical">


                <!--     여백           -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.1">
                </LinearLayout>

                <!--     공지사항           -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.1"
                    android:orientation="horizontal"
                    >

                        <androidx.appcompat.widget.AppCompatButton
                            android:focusable="true"
                            android:id="@+id/btn_setting_notice"
                            android:layout_marginLeft="40dp"
                            android:drawablePadding="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/setting_borderline"
                            android:drawableStart="@drawable/ic_setting_article"
                            android:text="공지사항"
                            android:textAlignment="viewStart"
                            android:textColor="#ffe495"
                            android:textSize="11pt"
                            style="?android:attr/borderlessButtonStyle"
                            />


                </LinearLayout>

                <!--     알림설정           -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.1">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_setting_alarm"
                            android:layout_marginLeft="40dp"
                            android:drawablePadding="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/setting_borderline"
                            android:drawableStart="@drawable/ic_setting_alarm"
                            android:text="알림설정"
                            android:textAlignment="viewStart"
                            android:textColor="#ffe495"
                            android:textSize="11pt"
                            style="?android:attr/borderlessButtonStyle"
                            />


                </LinearLayout>


                <!--     원하는 질문 의뢰하기           -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.1"
                    >

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_setting_request"
                            android:layout_marginLeft="40dp"
                            android:drawablePadding="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/setting_borderline"
                            android:drawableStart="@drawable/ic_setting_request1"
                            android:text="원하는 질문 의뢰하기"
                            android:textAlignment="viewStart"
                            android:textColor="#ffe495"
                            android:textSize="11pt"
                            style="?android:attr/borderlessButtonStyle"
                            />
                </LinearLayout>

                <!--     앱 평가하기           -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.1"
                    >

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_setting_rating"
                            android:layout_marginLeft="40dp"
                            android:drawablePadding="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/setting_borderline"
                            android:drawableStart="@drawable/ic_setting_heart"
                            android:text="앱 평가하기"
                            android:textAlignment="viewStart"
                            android:textColor="#ffe495"
                            android:textSize="11pt"
                            style="?android:attr/borderlessButtonStyle"
                            />
                </LinearLayout>

                <!--     여백           -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.16">
                        <LinearLayout
                            android:layout_marginLeft="40dp"
                            android:background="@drawable/setting_borderline"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center" >
                        </LinearLayout>
                </LinearLayout>


        </LinearLayout>

        <!--  하단 크기 가정    -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </LinearLayout>








</LinearLayout>
